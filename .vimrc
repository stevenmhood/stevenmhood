
set autoindent
set backspace=2    " backspace over everything in insert mode
set expandtab
set foldcolumn=2
set foldlevel=0    " show all fold contents
set foldmethod=indent
set guioptions-=m
set guioptions-=T
set hidden         " hide buffers, don't close
set history=50
set ignorecase     " case-insensitive matching
set incsearch      " incremental search (while you type)
set laststatus=2   " always have status bar
set linebreak      " display long lines wrapped at word boundaries
set matchtime=10   " amount of time to flash matching bracket
set nocompatible   " Vim defaults
set nofen          " Do not enable folding
set number
set ruler
set scrolloff=1
set shiftwidth=4   " with softtabstop, sets tabs and indents to be equal
set showcmd
set showmatch      " Show matching brackets
set softtabstop=4  
set textwidth=0    " don't wrap words by default
set textwidth=120
set titlestring=vim\:\ %t%(\ %)%M
set whichwrap+=<,>,[,],h,l,~

colorscheme darkblue

syntax on


